<!--suppress DeprecatedClassUsageInspection -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <Preference
        android:key="@string/pref_activate"
        android:title="@string/pref_activate_title"
        tools:summary="@string/pref_activate_summary_already_activated" />

    <Preference
        android:key="@string/pref_extension"
        android:title="@string/pref_extension_title"
        tools:summary="@string/pref_extension_summary" />

    <SwitchPreference
        android:key="@string/pref_compat_mode"
        android:title="@string/pref_compat_mode_title"
        android:summary="@string/pref_compat_mode_summary"
        android:persistent="false" />

    <Preference
        android:key="@string/pref_agent"
        android:title="@string/pref_agent_title"
        tools:summary="@string/pref_agent_summary_update" />

    <PreferenceScreen
        android:title="@string/pref_alert_dedup_title"
        android:summary="@string/pref_alert_dedup_summary">

        <Preference
            android:summary="@string/pref_alert_dedup_guide"
            android:selectable="false" />

        <Preference
            android:title="@string/pref_alert_dedup_action">
            <intent android:action="android.settings.APP_NOTIFICATION_SETTINGS"> <!--suppress AndroidElementNotAllowed -->
                <extra android:name="android.provider.extra.APP_PACKAGE" android:value="com.tencent.mm" />
            </intent>
        </Preference>

    </PreferenceScreen>

    <SwitchPreference
        android:key="@string/pref_wear"
        android:title="@string/pref_wear_title"
        android:defaultValue="false"
        android:summary="@string/pref_wear_summary" />

    <SwitchPreference
        android:key="@string/pref_mark_as_read"
        android:title="@string/pref_mark_as_read_title"
        android:defaultValue="false"
        android:summary="@string/pref_mark_as_read_summary" />

    <SwitchPreference
        android:key="@string/pref_like"
        android:title="@string/pref_like_title"
        android:defaultValue="false"
        android:summary="@string/pref_like_summary" />

    <SwitchPreference
        android:key="@string/pref_recalled"
        android:title="@string/pref_recalled_title"
        android:defaultValue="false"
        android:summary="@string/pref_recalled_summary" />

    <SwitchPreference
        android:key="@string/pref_chat_history"
        android:title="@string/pref_chat_history_title"
        android:defaultValue="false"
        android:summary="@string/pref_chat_history_summary" />

    <Preference
        android:title="@string/pref_chat_history_title"
        android:key="@string/pref_chat_history_activity"
        android:summary="@string/pref_chat_history_activity_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.oasisfeng.nevo.decorators.wechat"
            android:targetClass="com.oasisfeng.nevo.decorators.wechat.chatHistoryUi.UserActivity" />
    </Preference>

    <Preference
        android:title="@string/pref_open_source_title"
        android:summary="@string/pref_open_source_summary">
        <intent android:action="android.intent.action.VIEW" android:data="https://github.com/Nevolution/decorator-wechat" />
    </Preference>

</PreferenceScreen>
