<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/chat_send_button_disabled"
        android:state_enabled="false"
        android:color="@color/send_button_text_disabled" />

    <item android:drawable="@drawable/chat_send_button_pressed"
        android:state_pressed="true"
        android:color="@color/send_button_text_enabled" />

    <item android:drawable="@drawable/chat_send_button_pressed"
        android:state_focused="true"
        android:color="@color/send_button_text_enabled" />

    <!-- default state-->
    <item android:drawable="@drawable/chat_send_button_enabled"
        android:color="@color/send_button_text_enabled" />
</selector>