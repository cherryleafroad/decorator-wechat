<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="end"
    android:layout_marginStart="70dp"
    tools:context=".chatHistoryUi.ChatHistoryActivity">

    <TextView
        android:gravity="start"
        android:id="@+id/chat_bubble_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_sender_bubble"
        android:lineSpacingExtra="4dp"
        android:padding="10dp"
        android:text="Hey, I've always wanted to tell you, but.. I really like you.. Will you be my girlfriend?"
        android:textColor="@color/chat_sender_bubble_text"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
