<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.oasisfeng.nevo.decorators.wechat.R" />
        <import type="com.oasisfeng.nevo.decorators.wechat.chatHistory.adapter.DataBindingAdapter" />
        <import type="android.view.View" />

        <variable
            name="selfUserData"
            type="com.oasisfeng.nevo.decorators.wechat.chatHistory.viewmodel.SelfUserData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end"
        android:layout_marginStart="80dp"
        tools:context=".chatHistory.fragment.ChatFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bubble_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/avatar_holder"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="@{selfUserData.avatarEnabled ? @dimen/six_dp : @dimen/zero_dp}"
            tools:ignore="RtlSymmetry">
            <TextView
                android:gravity="start|center_vertical"
                android:id="@+id/chat_bubble_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_sender_bubble"
                android:lineSpacingExtra="4dp"
                android:text="Hey, I've always wanted to tell you, but.. I really like you.. Will you be my girlfriend?"
                android:textColor="@color/chat_sender_bubble_text"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constrainedWidth="true"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp"
            android:visibility="@{selfUserData.avatarEnabled ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@{selfUserData.avatar ?? context.getDrawable(R.drawable.blank_user)}"
                android:contentDescription="avatar"
                android:scaleType="centerCrop"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
